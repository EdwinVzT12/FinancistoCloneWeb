@{ //var account = (Account)ViewBag.Account; // FORMA a
    var account = (Account)Model; // FORMA a
}
<h1>Editar Cuenta</h1>
<div class="row">
    <div class="col-6 offset-3">
        <form action="/account/edit" enctype="multipart/form-data" method="post">
            <input type="hidden" name="Id" value="@account.Id" />

            <div class="form-group">
                <label>Imagen</label>
                <input type="file" name="Image" class="form-control" value="@account.ImagePath"/>
            </div>

            <div class="form-group">
                <label class="control-label">Tipo</label>
                <select class="form-control" name="TypeId">
                    <option value="">-- Selecciona una opción --</option>
                    @foreach (var item in ViewBag.Types)
                    {
                        if (account.Type == item)
                        {
                            <option value="@item.Id" selected>@item.Name</option>
                        }
                        else
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    }
                </select>
            </div>
            <div class="form-group">
                <label>Nombre </label>
                <input class="form-control" name="Name" value="@account.Name"/>
                @Html.ValidationMessage("Name")
            </div>
            @*Nombre <input name="Name" />
                @Html.ValidationMessage("Name")*@

            <div class="form-group">
                <label>Divisa</label>
                <select name="Currency" class="form-control">
                    <option value="Soles">Soles</option>

                </select>
            </div>
            <div class="form-group">
                <label>Saldo Inicial</label>
                <input name="Amount" class="form-control" value="@account.Amount" />
                @Html.ValidationMessage("Amount")
            </div>
            <button class="btn btn-primary">Guardar</button>
        </form>
    </div>
</div>
