@model Transaction

<h1>Editar Transacción</h1>
<div class="row">
        <div class="col-6" offset-3">

            <form action="/transaction/edit" method="post">

                <input type="hidden" name="Id" value="@Model.Id" />
                <input type="hidden" name="AccountId" value="@Model.AccountId" />

                <div class="form-group">
                    <label>Tipo</label>
                    <select name="Type" class="form-control">
                        <option value="GASTO">Gasto</option>
                        <option value="INGRESO">Ingreso</option>
                    </select>
                </div>

                <div class="form-group">
                    <label>Fecha y hora</label>
                    <input type="datetime-local" class="form-control" name="Date" value="@string.Format("{0:yyyy-MM-ddTHH:mm}", Model.Date)" />
                </div>

                <div class="form-group">
                    <label>Motivo</label>
                    <textarea type="text" class="form-control" name="Summary" value="@Model.Summary"></textarea>
                </div>

                <div class="form-group">
                    <label>Monto</label>
                    <input type="number" class="form-control" name="Amount" value="@Model.Amount" />
                </div>

                <button class="btn btn-primary">Guardar</button>

            </form>
        </div>
    </div>


